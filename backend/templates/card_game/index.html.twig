{% extends 'base.html.twig' %}

{% block title %}Jeu de Cartes{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Jeu de Cartes</h1>
    <h2>Main non triée</h2>

    <ul>
        {% for card in randomHand %}
            <li>{{ card.color }} - {{ card.value }}</li>
        {% endfor %}
    </ul>

    <h2>Main triée</h2>
    <ul>
        {% for card in sortedHand %}
            <li>{{ card.color }} - {{ card.value }}</li>
        {% endfor %}
    </ul>

    <h2>Ordre des Couleurs</h2>
    <ul>
        {% for color in colorOrder %}
            <li>{{ color }}</li>
        {% endfor %}
    </ul>

    <h2>Ordre des Valeurs</h2>
    <ul>
        {% for value in valueOrder %}
            <li>{{ value }}</li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
